---
import db from '../data/db.json';

const { testimonios, articulos } = db;
---

<!-- Testimonials Section -->
<section class="py-24 bg-[var(--dark)] text-white overflow-hidden">
  <div class="container border-b border-white/10 pb-24">
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-8">
      <div class="max-w-xl">
        <span class="text-[var(--secondary)] font-bold uppercase tracking-widest text-sm">Experiencias Reales</span>
        <h2 class="text-4xl md:text-5xl font-black mt-4 mb-6">Confianza Ganada día a día</h2>
      </div>
      <div class="bg-white/5 p-6 rounded-2xl flex gap-12 backdrop-blur">
        <div class="text-center">
          <p class="text-3xl font-black text-white">4.9</p>
          <div class="flex text-yellow-400 justify-center my-1"><i data-lucide="star" class="w-3 h-3 fill-current"></i><i data-lucide="star" class="w-3 h-3 fill-current"></i><i data-lucide="star" class="w-3 h-3 fill-current"></i><i data-lucide="star" class="w-3 h-3 fill-current"></i><i data-lucide="star" class="w-3 h-3 fill-current"></i></div>
          <p class="text-[10px] uppercase font-bold opacity-60 tracking-wider">Rating Promedio</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-black text-white">500+</p>
          <p class="text-[10px] my-1 opacity-0">-</p>
          <p class="text-[10px] uppercase font-bold opacity-60 tracking-wider">Reseñas Google</p>
        </div>
      </div>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8">
      {testimonios.map(t => (
        <div class="bg-white/5 rounded-3xl p-10 border border-white/10 hover:border-[var(--secondary)] transition-all duration-300">
          <div class="flex justify-between items-start mb-8">
            <div class="flex text-yellow-400 gap-1">
              {[...Array(t.rating)].map(() => <i data-lucide="star" class="w-5 h-5 fill-current"></i>)}
            </div>
            <span class="text-xs opacity-40 font-bold">{t.date}</span>
          </div>
          
          <blockquote class="text-xl md:text-2xl font-medium leading-relaxed mb-10 italic">
            "{t.quote}"
          </blockquote>
          
          <div class="flex items-center justify-between mt-auto">
            <div class="flex items-center gap-4">
              <div class="w-14 h-14 rounded-full overflow-hidden border-2 border-[var(--secondary)]">
                <img src={t.avatar} alt={t.author} class="w-full h-full object-cover" />
              </div>
              <div>
                <p class="font-bold text-lg">{t.author}</p>
                <p class="text-sm opacity-60">Dueño de {t.pet}</p>
              </div>
            </div>
            {t.verified && (
              <div class="hidden sm:flex items-center gap-2 bg-[var(--secondary)]/10 text-[var(--secondary)] px-3 py-1 rounded-full border border-[var(--secondary)]/20">
                <i data-lucide="shield-check" class="w-4 h-4"></i>
                <span class="text-[10px] font-bold uppercase tracking-widest">Cliente Verificado</span>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Blog/Knowledge Section -->
  <div class="container pt-24">
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-8">
      <div class="max-w-xl">
        <span class="text-[var(--secondary)] font-bold uppercase tracking-widest text-sm">Centro de Conocimiento</span>
        <h2 class="text-4xl md:text-5xl font-black mt-4 mb-6">Artículos y Guías</h2>
        <p class="text-lg opacity-60">Información verificada por nuestros veterinarios para el cuidado responsable de tu mascota.</p>
      </div>
      <a href="#" class="btn-secondary border-white text-white hover:bg-white hover:text-[var(--dark)]">
        Ver todo el Blog
      </a>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12">
      {articulos.map((art, i) => (
        <div class={`group cursor-pointer ${i === 0 ? 'lg:col-span-1' : ''}`}>
          <div class="relative rounded-3xl overflow-hidden aspect-[16/9] mb-8 shadow-2xl">
            <img src={art.image} alt={art.title} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-[var(--dark)] to-transparent opacity-60"></div>
            <span class="absolute top-6 left-6 bg-[var(--primary)] text-white px-4 py-1 rounded-full text-xs font-bold uppercase tracking-widest">
              {art.category}
            </span>
          </div>
          
          <div class="flex items-center gap-4 mb-4 text-xs font-bold opacity-60 uppercase tracking-widest">
            <span class="flex items-center gap-1"><i data-lucide="calendar" class="w-3 h-3"></i> {art.date}</span>
            <span class="w-1 h-1 bg-white rounded-full"></span>
            <span class="flex items-center gap-1"><i data-lucide="clock" class="w-3 h-3"></i> {art.readTime} lectura</span>
          </div>
          
          <h3 class="text-3xl font-bold mb-4 group-hover:text-[var(--secondary)] transition-colors leading-tight">{art.title}</h3>
          <p class="text-lg opacity-60 mb-8 line-clamp-2">{art.excerpt}</p>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <img src={art.author.avatar} class="w-8 h-8 rounded-full border border-white/20" />
              <span class="text-sm font-bold">{art.author.name}</span>
            </div>
            <span class="text-[var(--secondary)] font-black uppercase text-xs tracking-tighter group-hover:translate-x-2 transition-transform inline-flex items-center gap-2">
              Leer más <i data-lucide="arrow-right" class="w-4 h-4"></i>
            </span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
