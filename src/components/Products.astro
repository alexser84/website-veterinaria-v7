---
import db from '../data/db.json';

const { productos } = db;
const categorias = ["Todo", "Alimento Premium", "Farmacia", "Tecnología", "Wellness"];
---

<section id="tienda" class="py-24 bg-[var(--light)]/50">
  <div class="container">
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-8">
      <div class="max-w-xl">
        <span class="text-[var(--primary)] font-bold uppercase tracking-widest text-sm">Tienda Premium</span>
        <h2 class="text-4xl md:text-5xl font-black text-[var(--dark)] mt-4 mb-6">Productos de Alta Gama</h2>
        <p class="text-lg text-[var(--text-secondary)]">Selección curada de las mejores marcas internacionales para garantizar la mejor calidad de vida a tu mascota.</p>
      </div>
      
      <div class="flex flex-wrap gap-2">
        {categorias.map((cat, i) => (
          <button class={`px-5 py-2 rounded-full text-sm font-bold transition-all ${i === 0 ? 'bg-[var(--primary)] text-white shadow-lg' : 'bg-white hover:bg-[var(--primary)]/10'}`}>
            {cat}
          </button>
        ))}
      </div>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      {productos.map((producto) => (
        <div class="card-professional flex flex-col group h-full">
          <!-- Product Image Wrapper -->
          <div class="relative aspect-square overflow-hidden bg-white">
            <img 
              src={producto.imagen} 
              alt={producto.nombre}
              class="w-full h-full object-contain p-8 transition-transform duration-500 group-hover:scale-110"
            />
            
            <!-- Badges -->
            <div class="absolute top-4 left-4 flex flex-col gap-2">
              {producto.nuevo && (
                <span class="bg-[var(--primary)] text-white text-[10px] font-black uppercase px-2 py-1 rounded shadow-lg">NUEVO</span>
              )}
              {producto.bestseller && (
                <span class="bg-[var(--secondary)] text-white text-[10px] font-black uppercase px-2 py-1 rounded shadow-lg">BEST SELLER</span>
              )}
              {producto.descuento && (
                <span class="bg-red-500 text-white text-[10px] font-black uppercase px-2 py-1 rounded shadow-lg">-{producto.descuento}%</span>
              )}
            </div>
            
            <!-- Quick Actions -->
            <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-3">
              <button class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-lg hover:bg-[var(--primary)] hover:text-white transition-all transform translate-y-4 group-hover:translate-y-0 duration-300">
                <i data-lucide="eye" class="w-5 h-5"></i>
              </button>
              <button class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-lg hover:bg-red-500 hover:text-white transition-all transform translate-y-4 group-hover:translate-y-0 duration-300 delay-75">
                <i data-lucide="heart" class="w-5 h-5"></i>
              </button>
            </div>
          </div>
          
          <!-- Product Details -->
          <div class="p-6 flex flex-col flex-grow">
            <span class="text-[10px] font-bold text-[var(--primary)] uppercase tracking-widest mb-1">{producto.marca}</span>
            <h3 class="font-bold text-lg mb-2 line-clamp-2 leading-tight group-hover:text-[var(--primary)] transition-colors">{producto.nombre}</h3>
            
            <div class="flex items-center gap-1 mb-4">
              <div class="flex text-yellow-400">
                {[...Array(5)].map((_, i) => (
                  <i data-lucide="star" class={`w-3 h-3 ${i < Math.floor(producto.rating) ? 'fill-current' : ''}`}></i>
                ))}
              </div>
              <span class="text-[10px] opacity-60">({producto.reviews} reseñas)</span>
            </div>
            
            <ul class="space-y-1 mb-6 flex-grow">
              {producto.specs.map(spec => (
                <li class="text-[10px] flex items-center gap-1 opacity-70">
                  <i data-lucide="check" class="w-3 h-3 text-[var(--secondary)]"></i>
                  {spec}
                </li>
              ))}
            </ul>
            
            <div class="flex flex-col gap-4 mt-auto">
              <div class="flex flex-col">
                {producto.precio_original && (
                  <span class="text-xs line-through opacity-40">${producto.precio_original.toLocaleString('es-CL')}</span>
                )}
                <span class="text-2xl font-black text-[var(--dark)]">${producto.precio.toLocaleString('es-CL')}</span>
              </div>
              
              <div class="flex items-center justify-between gap-3">
                <button class="flex-grow btn-primary py-2 px-1 text-xs flex items-center justify-center gap-2">
                  <i data-lucide="shopping-cart" class="w-4 h-4"></i>
                  Añadir al Carro
                </button>
                {producto.stock < 10 && producto.stock > 0 && (
                  <span class="text-[10px] text-orange-500 font-bold leading-tight">Últimas {producto.stock} unidades</span>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="flex justify-center">
      <a href="#" class="btn-secondary flex items-center gap-2 font-black px-10">
        Ver Todo el Catálogo
        <i data-lucide="arrow-right" class="w-5 h-5"></i>
      </a>
    </div>
  </div>
</section>
